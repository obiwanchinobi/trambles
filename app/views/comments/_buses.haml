.rectangle
  %h2 Buses
.triangle-l
.triangle-r
.buttons
  %span.bus
  %a.buttonRave{:href=>"raves/new?category=Bus"}
    %span.rave Rave
  %a.buttonRant{:href=>"rants/new?category=Bus"}
    %span.rant Rant

.info
  - @buses.each do |comment|
    %h2
      =h comment.transport_id
    %p
      - if comment.type == "rave"
        %span.raveIcon
      - else
        %span.rantIcon
      =h comment.ramble
      %br
      %span.footer
        added by 
        %span.author
          =h comment.author
        on 
        =h comment.created_at